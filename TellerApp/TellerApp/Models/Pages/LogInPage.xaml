<Page x:Class="TellerApp.Models.Pages.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TellerApp.Models.Pages"
      mc:Ignorable="d"
      Title="LogInPage">
    <StackPanel>
        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition MinWidth="100" Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Username"
                   Grid.Row="0" Grid.Column="0"/>
            <TextBox Name="UsernameTextBox" 
                   Grid.Row="0" Grid.Column="1"/>

            <Label Content="Password" 
                   Grid.Row="1" Grid.Column="0"/>
            <PasswordBox Name="PasswordTextBox" 
                   Grid.Row="1" Grid.Column="1"/>
        </Grid>
        
        <Button Content="Log in" HorizontalAlignment="Center" MinWidth="100" Click="Button_Click"/>
    </StackPanel>
</Page>
